                                {
                                    @class = "form-control"
                                })
                                @Html.ValidationMessageFor(model => model.PointAddressBlockNumber, "", new
                                {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PointLongitude, new
                            {
                                @class = "col-md-2"
                            })
                            <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-centered">
                                @Html.TextBoxFor(model => model.PointLongitude, new
                                {
                                    @class = "form-control"
                                })
                                @Html.ValidationMessageFor(model => model.PointLongitude, "", new
                                {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                        
