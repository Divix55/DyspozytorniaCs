@model User
@{
    ViewData["Title"] = "Login";
}

<section class="mainBody">
    <div class="row">
        <div class="col-sm-12">
            <div class="mainText">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new
                        {
                            @class = "text-danger"
                        })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, new
                            {
                                @class = "col-md-2"
                            })
                            <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-centered">
                                @Html.TextBoxFor(model => model.UserName, new
                                {
                                    @class = "form-control"
                                })
                                @Html.ValidationMessageFor(model => model.UserName, "", new
                                {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserPassword, new
                            {
                                @class = "col-md-2"
                            })
                            <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-centered">
                                @Html.PasswordFor(model => model.UserPassword, new
                                {
                                    @class = "form-control"
                                })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new
                                {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-default" value="Zaloguj">
                                <button type="reset" class="btn btn-default">Wyczysc</button>
                            </div>
                        </div>
                    </div>
                }
                <a href="/register">
                    <p>Zarejestruj sie</p>
                </a>
            </div>
        </div>
    </div>
</section>